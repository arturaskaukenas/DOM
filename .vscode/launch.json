{
	"version": "1.0.0",
	"configurations": [
		{
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 0
        },
		{
            "name": "Run tests",
            "type": "php",
            "request": "launch",
            "program": "${workspaceFolder}/tests/all.php",
            "cwd": "${workspaceFolder}",
            "port": 0
        },
		{
			"name": "Listen for Xdebug",
			"type": "php",
			"request": "launch",
			"port": 9003
		}
	]
}